using UnityEngine;
using UnityEngine.UI;

public class CaptionDisplay : MonoBehaviour
{
    [SerializeField]
    private Text captionText;

    private void Start()
    {
        ClearCaption();
    }

    // this works to update the caption after new data is recieved
    public void UpdateCaption(string newCaption)
    {
        if (captionText != null)
        {
            captionText.text = newCaption;
            Debug.Log($"Caption updated: {newCaption}");
        }
        else
        {
            Debug.LogError("Caption Text component is not assigned.");
        }
    }

    // this clears the caption text you prevent overlapping data and also prevent the interface holding onto data that it doesn't need to 
    public void ClearCaption()
    {
        if (captionText != null)
        {
            captionText.text = string.Empty; // Clear the caption text
        }
    }
}
